<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:padding="20dp">

   <Button
       android:id="@+id/btn_start"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Start"
       android:textColor="#FFFFFF"
       android:background="#9f1616"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:textSize="25sp"/>
    <TextView
        android:id="@+id/text_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:text="First one will Get 0"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn_start"/>
    <TableLayout
        android:id="@+id/table_tictac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:padding="10dp">
        <TableRow
            android:id="@+id/row_one">
            <Button
                android:id="@+id/btn_one"
                android:layout_weight="1"
                android:height="100dp"
                android:background="@drawable/btn_background"
                android:padding="10dp" />
            <Button
                android:id="@+id/btn_two"
                android:layout_weight="1"
                android:height="100dp"
                android:background="@drawable/btn_background" />
            <Button
                android:id="@+id/btn_three"
                android:layout_weight="1"
                android:height="100dp"
                android:background="@drawable/btn_background" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_four"
                android:layout_weight="1"
                android:height="100dp"
                android:background="@drawable/btn_background"  />
            <Button
                android:id="@+id/btn_five"
                android:layout_weight="1"
                android:height="100dp"
                android:background="@drawable/btn_background"  />
            <Button
                android:id="@+id/btn_six"
                android:layout_weight="1"
                android:height="100dp"
                android:background="@drawable/btn_background"  />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn_seven"
                android:layout_weight="1"
                android:height="100dp"
                android:background="@drawable/btn_background" />
            <Button
                android:id="@+id/btn_eight"
                android:layout_weight="1"
                android:height="100dp"
                android:background="@drawable/btn_background"  />
            <Button
                android:id="@+id/btn_nine"
                android:layout_weight="1"
                android:height="100dp"
                android:background="@drawable/btn_background"  />
        </TableRow>
    </TableLayout>
<Button
    android:id="@+id/btn_1p"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1P"
    android:textSize="25sp"
    android:textColor="#FFFFFF"
    android:background="#9f1616"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/btn_1p"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@id/btn_2p"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btn_2p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2P"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="#9f1616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>