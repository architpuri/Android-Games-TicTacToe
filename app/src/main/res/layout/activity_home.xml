<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/homebackscreen">
    <Button
        android:id="@+id/btn_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/guide_left"
        app:layout_constraintEnd_toStartOf="@id/guide_right"
        app:layout_constraintTop_toBottomOf="@id/guide_single_top"
        app:layout_constraintBottom_toTopOf="@id/guide_single_bottom"/>
    <Button
        android:id="@+id/btn_multi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/guide_left"
        app:layout_constraintEnd_toStartOf="@id/guide_right"
        app:layout_constraintTop_toBottomOf="@id/guide_multi_top"
        app:layout_constraintBottom_toTopOf="@id/guide_multi_bottom"/>

    <android.support.constraint.Guideline
        android:id="@+id/guide_left"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1" />
    <android.support.constraint.Guideline
        android:id="@+id/guide_right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"/>
    <android.support.constraint.Guideline
        android:id="@+id/guide_single_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>
    <android.support.constraint.Guideline
        android:id="@+id/guide_single_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52"/>
    <android.support.constraint.Guideline
        android:id="@+id/guide_multi_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57"/>
    <android.support.constraint.Guideline
        android:id="@+id/guide_multi_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69"/>

</android.support.constraint.ConstraintLayout>